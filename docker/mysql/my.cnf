[mysqld]
# Configuration MySQL optimisée pour Chocolatey CMS

# Général
default-authentication-plugin = mysql_native_password
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
skip-character-set-client-handshake
default-time-zone = '+00:00'

# Sécurité
local-infile = 0
skip-show-database
secure-file-priv = /tmp

# Performance - InnoDB
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 120

# Performance - Query Cache (deprecated in MySQL 8.0)
# query_cache_size = 64M
# query_cache_type = 1

# Performance - Connections
max_connections = 200
max_connect_errors = 100
connect_timeout = 60
wait_timeout = 600
interactive_timeout = 600

# Performance - Buffers
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
myisam_sort_buffer_size = 128M
key_buffer_size = 128M
table_open_cache = 4000
table_definition_cache = 4000

# Performance - Temporary tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Performance - Thread cache
thread_cache_size = 50

# Logs
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Binlog
binlog_format = ROW
binlog_row_image = MINIMAL
expire_logs_days = 7
max_binlog_size = 128M

# SQL Mode strict pour éviter les erreurs
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER"

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max_allowed_packet = 128M