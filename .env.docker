# Configuration Docker pour Chocolatey CMS
# Fichier de configuration pour le développement local

APP_NAME="Chocolatey CMS"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=Europe/Paris

# Base de données
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=chocolatey
DB_USERNAME=chocolatey
DB_PASSWORD=chocolatey_password

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=chocolatey

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=7200

# Queue
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail (MailHog pour tests locaux)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@chocolatey.local
MAIL_FROM_NAME="Chocolatey CMS"

# Configuration Chocolatey
CHOCOLATEY_HOTEL_NAME="Chocolatey Hotel"
CHOCOLATEY_HOTEL_URL="http://localhost:8080/"
CHOCOLATEY_MOTTO="Je suis nouveau sur Habbo !"
CHOCOLATEY_FIGURE="hr-115-42.hd-195-19.ch-3030-82.lg-275-1408.fa-1201.ca-1804-64"
CHOCOLATEY_LANGUAGE=fr
CHOCOLATEY_EARN_ENABLED=false
CHOCOLATEY_ADS_ENABLED=false

# Sécurité
CHOCOLATEY_SECURITY_HASH=sha256
CHOCOLATEY_RECAPTCHA_SITE_KEY=""
CHOCOLATEY_RECAPTCHA_SECRET_KEY=""

# Facebook (optionnel)
CHOCOLATEY_FACEBOOK_APP_KEY=""
CHOCOLATEY_FACEBOOK_APP_SECRET=""

# Arcturus (serveur Habbo)
CHOCOLATEY_ARCTURUS_USERNAME=""

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Performance
OPCACHE_ENABLE=true
REDIS_CACHE_TTL=3600

# Développement
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true